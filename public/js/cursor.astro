import { gsap }from "gsap";
---
  <script>
    import { gsap }from "gsap";
  var cursor = document.querySelector('.curse');


  var mouseX = 0;
  var mouseY = 0;
  gsap.to(cursor, {
    duration: 0.016, // Duration is now part of the vars object
    repeat: -1,
    onRepeat: function () {
      gsap.set(cursor, {
        css: {
          left: mouseX,
          top: mouseY,
        },
      });
    },
  });
  window.addEventListener('mousemove', function (e) {
    mouseX = e.clientX;
    mouseY = e.clientY;
  });
</script>