<script>

  const menuIcon = document.getElementById("menuIcon");
  const navLinks = document.getElementById("navLinks");

  if (menuIcon && navLinks) {
    menuIcon.addEventListener("click", () => {
      navLinks.classList.toggle("open");
    });
  }

  // Get the modal
  const loginModal: HTMLElement | null = document.getElementById("login");

  // Get the button that opens the modal
  const loginBtn: HTMLElement | null = document.querySelector(".button1");

  // Get the <span> element that closes the modal
  const closeLoginModal: HTMLElement | null =
    document.querySelector(".close-login");

  // Check if the modal and button exist before adding event listeners
  if (loginModal && loginBtn) {
    // When the user clicks the button, open the modal
    loginBtn.onclick = function () {
      loginModal.style.display = "flex";
    };

    // If closeLoginModal exists, add the event listener
    if (closeLoginModal) {
      // When the user clicks on <span> (x), close the modal
      closeLoginModal.onclick = function () {
        loginModal.style.display = "none";
      };
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event: MouseEvent) {
      if (event.target === loginModal) {
        loginModal.style.display = "none";
      }
    };
  }
</script>
