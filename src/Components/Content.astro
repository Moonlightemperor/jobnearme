<script >

  import gsap from 'gsap';
  function breakTheText() {
  var h1Elements = document.querySelectorAll("h1.hero-text");
  console.log(`Found ${h1Elements.length} <h1> elements`);

  if (!h1Elements.length) {
    console.error("No <h1> elements with the class 'hero-text' found on the page.");
    return;
  }

  h1Elements.forEach((h1) => {
    console.log("Processing <h1> element:", h1);
    var h1text = h1.textContent || ""; 
    var splittedText = h1text.split("");

    var clutter = "";

    var halfValue = Math.floor(splittedText.length / 2);
    splittedText.forEach(function(elem, idx) {
      if (idx < halfValue) {
        clutter += `<span class="a">${elem}</span>`;
      } else {
        clutter += `<span class="b">${elem}</span>`;
      }
    });

    h1.innerHTML = clutter;
  });
}

breakTheText();

gsap.from("h1.hero-text .a", {
  y: 50,
  duration: 0.7,
  opacity: 0,
  delay: 0.2,
  stagger: 0.2,
});

gsap.from("h1.hero-text .b", {
  y: 50,
  duration: 0.7,
  opacity: 0,
  delay: 0.2,
  stagger: -0.2,
});



</script>

