<script>
  import {gsap} from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';


  gsap.registerPlugin(  ScrollTrigger )


  gsap.from('.jobs-container .featured-job-card',{
   scale:0,
    delay:2,
    duration:2,
    scrollTrigger :{
       trigger:".featured-job-card",
       scroller:"body",
       start:"top 100%",
       end:"top 50%",
       scrub:3,
    },
   
  })


  gsap.from('.jobs-container .jobs-grid',{
   x:200,
    delay:2,
    duration:2,
    scrollTrigger :{
       trigger:".featured-job-card",
       scroller:"body",
       start:"top 100%",
       end:"top 50%",
       scrub:3,

    },
   
  })
</script>


<div class="about">
  <div class="first">
    <h3>Trusted by 5000+ Companies Worldwide </h3>
  </div>

  <div class="companies">
    <img src="./Assets/svg/google.svg" alt="google">
    <img src="./Assets/svg/amazon.svg" alt="google">

    <img src="./Assets/svg/Apple.png" alt="google" >
    <img src="./Assets/svg/netflix.png" alt="google">
  
  </div>
  <div class="card-section">
    <section class="featured-jobs" id="featured-jobs">
     
      <div class="jobs-container">
        <div class="featured-job-card">
          <img src={featuredJob.image} alt={featuredJob.title} class="featured-job-image" />
          <!-- <div class="featured-job-info">
            <h3>{featuredJob.title}</h3>
            <p>{featuredJob.experience}</p>
            <p>{featuredJob.location}</p>
          </div> -->
        </div>
        
        <div class="jobs-grid">
          <h2>Featured Jobs</h2>
          <p>Explore popular job categories</p>
          <div class="jobs-grid2">
            {jobs.map(job => (
              <div class="job-card">
                <img src={job.image} alt={job.title} class="job-image" />
                <div class="job-info">
                  <h3>{job.title}</h3>
                  <p>{job.experience}</p>
                  <p>{job.location}</p>
                </div>
              </div>
            ))}
          </div>
          
        </div>
      </div>
    </section>
    
  </div>
  
</div>

