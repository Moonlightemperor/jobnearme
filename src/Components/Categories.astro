const featuredJob = { 
  title: 'Lead UI/UX Designer', 
  experience: '5-7 years exp', 
  location: 'Remote - Full Time', 
  image: './Assets/Images/jobnear.jpeg'
};

const jobs = [
  { 
    title: 'Graphic Designer', 
    experience: '3-5 years exp', 
    location: 'Work from Home', 
    image: './Assets/Images/graphic.jpeg' 
  },
  { 
    title: 'Java Developer', 
    experience: '2-4 years exp', 
    location: 'Mumbai, INR 8-10 LPA', 
    image: './Assets/Images/java.jpeg' 
  },
  {
    title: 'Lead UI/UX Designer', 
  experience: '5-7 years exp', 
  location: 'Remote - Full Time', 
